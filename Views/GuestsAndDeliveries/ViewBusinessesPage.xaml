<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    Title="View Businesses"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="VirtualDoorman.Views.GuestsAndDeliveries.ViewBusinessesPage">
	<ContentPage.Content>
        <StackLayout
            VerticalOptions="StartAndExpand"
            Padding="0,10,0,0">
            <StackLayout
                Padding="5">
                <ListView
                    x:Name="businessListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell
                                Text="{Binding LastName}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
