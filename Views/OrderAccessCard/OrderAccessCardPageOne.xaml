<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    Title="Card/Fob"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="VirtualDoorman.Views.OrderAccessCard.OrderAccessCardPageOne">
	<ContentPage.Content>
        <StackLayout>
            <TableView 
                HasUnevenRows="true"
                Intent="Form">
                <TableRoot>
                    <TableSection 
                        Title="Number of Cards/FOB's">
                        <ViewCell>
                            <StackLayout
                                Orientation="Horizontal"
                                Padding="16">
                                <Label
                                    Text="Fob Count"
                                    VerticalOptions="Center"/>
                                <Picker
                                    x:Name="fobCount"
                                    HorizontalOptions="EndAndExpand">
                                    <Picker.Items>
                                        <x:String>0</x:String>
                                        <x:String>1</x:String>
                                        <x:String>2</x:String>
                                        <x:String>3</x:String>
                                        <x:String>4</x:String>
                                        <x:String>5</x:String>
                                        <x:String>6</x:String>
                                        <x:String>7</x:String>
                                        <x:String>8</x:String>
                                        <x:String>9</x:String>
                                        <x:String>10</x:String>
                                        <x:String>11</x:String>
                                        <x:String>12</x:String>
                                    </Picker.Items>
                                </Picker>
                            </StackLayout>
                        </ViewCell>

                        <ViewCell>
                            <StackLayout
                                Orientation="Horizontal"
                                Padding="16">
                                <Label
                                    Text="Card Count"
                                    VerticalOptions="Center"/>
                                <Picker
                                    x:Name="cardCount"
                                    HorizontalOptions="EndAndExpand">
                                    <Picker.Items>
                                        <x:String>0</x:String>
                                        <x:String>1</x:String>
                                        <x:String>2</x:String>
                                        <x:String>3</x:String>
                                        <x:String>4</x:String>
                                        <x:String>5</x:String>
                                        <x:String>6</x:String>
                                        <x:String>7</x:String>
                                        <x:String>8</x:String>
                                        <x:String>9</x:String>
                                        <x:String>10</x:String>
                                        <x:String>11</x:String>
                                        <x:String>12</x:String>
                                    </Picker.Items>
                                </Picker>
                            </StackLayout>
                        </ViewCell>
                            
